{
  "manifest_version": 3,
  "name": "UMEW Chat",
  "version": "1.0",
  "description": "youtube music chat extension",
  "action": {
    "default_icon": "images/logo.png"
  },
  "permissions": ["scripting", "tabs", "activeTab"],
  "content_scripts": [],
  "background": {
    "service_worker": "background.js"
  },

  "host_permissions": ["https://*/*", "http://*/*"],
  "icons": {}
}
