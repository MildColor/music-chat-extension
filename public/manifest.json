{
  "manifest_version": 3,
  "name": "music-chat",
  "version": "1.0",
  "description": "",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["scripting", "tabs", "activeTab"],
  "content_scripts": [
    {
      "matches": ["*://music.youtube.com/*"],
      "js": ["content.ts"]
    }
  ],
  "host_permissions": ["https://*/*", "http://*/*"],
  "icons": {}
}
