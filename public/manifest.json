{
  "manifest_version": 3,
  "name": "music-chat",
  "version": "1.0",
  "description": "",
  "action": {},
  "permissions": ["scripting", "tabs", "activeTab"],
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["https://music.youtube.com/*"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },

  "host_permissions": ["https://*/*", "http://*/*"],
  "icons": {}
}
